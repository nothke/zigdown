    "version": "2.0.0",
    "tasks": [
        {
            "label": "zig build-exe",
            "type": "process",
            "command": "zig",
            "args": [
                "build",
                "run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
                "clear": true
