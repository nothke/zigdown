            "group": "build",
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "zig test",
            "type": "process",
            "command": "zig",
            "args": [
                "test",
                "${file}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation":{
                "showReuseMessage": false,
                "clear": true
            }
